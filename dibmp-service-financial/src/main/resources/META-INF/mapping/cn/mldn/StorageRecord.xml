<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mldn.dibmp.dao.IStorageRecordDAO">
	<sql id="selectBase">
		SELECT srid,said,gid,name,num,price,weight,status,indate,inmid FROM storage_record
	</sql>
	<select id="findAll" resultType="StorageRecord">
		 <include refid="selectBase" />
	</select>
	
	<select id="findSplit" resultType="StorageRecord" parameterType="Map">
		<include refid="selectBase" />
		<where>
			<if test="column != null and keyWord != null and column !=&quot;&quot; and keyWord != &quot;&quot;">
				${column} like #{keyWord}
			</if>
		</where>
		limit #{start},#{lineSize}
	</select>
	
	<select id="getAllCount" resultType="Long" parameterType="Map">
		select count(*) from storage_record
		<where>
			<if test="column != null and keyWord != null and column !=&quot;&quot; and keyWord != &quot;&quot;">
				${column} LIKE #{keyWord}
			</if>
		</where>
	</select>
	
	<insert id="doCreate" parameterType="StorageRecord" keyProperty="srid"
			useGeneratedKeys="true">	<!-- 使用别名 --> 
		INSERT INTO storage_record(said,gid,name,num,price,weight,status,indate,inmid)
		VALUES (#{said},#{gid},#{name},#{num},#{price},#{weight},#{status},#{indate},#{inmid}) 
	</insert>
	
</mapper>